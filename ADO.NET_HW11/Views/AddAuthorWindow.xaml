<Window x:Class="ADO.NET_HW11.Views.AddAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_HW11.Views"
        mc:Ignorable="d"
        Title="AddAuthorWindow" Height="150" Width="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding AuthorFirstName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Width="200" Height="30"/>
        <TextBox Text="{Binding AuthorLastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Width="200" Height="30"/>
        <Button Command="{Binding AddAuthor}" Content="Додати автора" Grid.Row="2" Width="200" Height="30"/>
    </Grid>
</Window>
