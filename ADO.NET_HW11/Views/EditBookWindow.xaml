<Window x:Class="ADO.NET_HW11.Views.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_HW11.Views"
        mc:Ignorable="d"
        Title="EditBookWindow" Height="110" Width="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding BookName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Width="200" Height="30"/>
        <Button Command="{Binding EditBookMethod}" Content="Оновити" Grid.Row="1" Width="200" Height="30"/>
    </Grid>
</Window>
